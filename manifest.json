{
  "name": "Pomodoro Timer",
  "version": "1.0.0",
  "description": "A clean and modern Pomodoro timer to boost your productivity",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png", 
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png", 
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
