{
  "name": "Focus Timer",
  "version": "2.0.0",
  "description": "Advanced Pomodoro timer with custom timings , sound notifications, analytics, and custom settings",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "offscreen"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png", 
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png", 
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["sounds/*", "settings.html", "chart.js", "offscreen.html", "offscreen.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
